{
  "name": "nestjs-typeorm-mongodb",
  "private": true,
  "scripts": {
    "build": "bun -b nest build",
    "format": "bun -b prettier --write \"{src,apps,libs,test}/**/*.ts\"",
    "start": "bun -b nest start",
    "start:dev": "bun -b nest start --watch",
    "start:debug": "bun -b nest start --debug --watch",
    "start:prod": "bun dist/main",
    "lint": "bun -b eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "bun test src",
    "test:watch": "bun test --watch src",
    "test:cov": "bun test --coverage src",
    "test:debug": "bun test --inspect-brk src",
    "test:e2e": "bun test e2e"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^11.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bun": "^1.3.0",
    "@types/express": "^5.0.0",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
